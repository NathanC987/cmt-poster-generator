# API Configuration
API_TITLE="CMT Poster Generator"
API_VERSION="1.0.0"
DEBUG=false

# Image Generation - Replicate
IMAGE_PROVIDER="replicate"
REPLICATE_API_TOKEN="your_replicate_api_token_here"

# Text Processing - Azure OpenAI
TEXT_PROVIDER="azure_openai"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your_azure_openai_api_key_here"
AZURE_OPENAI_DEPLOYMENT="gpt-4"

# Rate Limiting - Upstash Redis
RATE_LIMITER="upstash"
UPSTASH_REDIS_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_TOKEN="your_upstash_redis_token_here"

# Storage - WordPress Media Library
STORAGE_PROVIDER="wordpress"

# WordPress Integration (for storage and speaker photos)
WORDPRESS_URL="https://your-wordpress-site.com"
WORDPRESS_USERNAME="your_wp_username"
WORDPRESS_PASSWORD="your_wp_password"

# Poster Configuration
POSTER_WIDTH=1200
POSTER_HEIGHT=1600
POSTER_FORMAT="PNG"
POSTER_QUALITY=95

# Font Configuration
POSTER_FONT_FAMILY="Glacial Indifference"

# Rate Limiting Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Overrides (for local testing)
# Uncomment these lines for local development
# RATE_LIMITER="memory"
# STORAGE_PROVIDER="local"
